---
import Stalux from "@layouts/Stalux.astro";
import Navs from "@components/stalux/layout/navs.astro";
import { getCollection } from "astro:content";

const stalux = (await getCollection("config"))[0].data;
---

<Stalux
  stalux={{
    title: "404 - 页面未找到 | " + stalux.title,
    description: "抱歉，您访问的页面不存在。3秒后将自动返回首页。",
    url: Astro.url.href,
    twitterSite: stalux.twitterSite,
    noindex: true,
    nofollow: true,
    anyhead: stalux.anyhead,
  }}
>
  <div style="height: 3em;"></div>
  <Navs />
  <div class="error-container" data-pagefind-ignore>
    <div class="error-content">
      <h1>404</h1>
      <p>页面未找到</p>
      <a href="/" class="home-btn">返回首页</a>
    </div>
  </div>

  <script>
    // 3秒后自动跳转首页
    setTimeout(() => {
      window.location.href = "/";
    }, 3000);
  </script>
</Stalux>

<style>
  .error-container {
    text-align: center;
    padding: 2rem;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-content h1 {
    font-size: 6rem;
    font-weight: bold;
    margin: 0;
    color: var(--white-90p);
    text-shadow: 0 2px 10px var(--shadow-medium);
  }

  .error-content p {
    font-size: 1.5rem;
    margin: 1rem 0 2rem 0;
    color: var(--white-70p);
  }

  .home-btn {
    display: inline-block;
    padding: var(--space-md) var(--space-lg);
    background: var(--black-20p);
    color: var(--white-90p);
    text-decoration: none;
    border-radius: var(--radius-md);
    border: var(--border-thin) solid var(--white-20p);
    transition:
      background-color var(--transition-normal),
      transform var(--transition-normal),
      box-shadow var(--transition-normal);
    font-size: var(--font-size-base);
  }

  .home-btn:hover {
    background: var(--accent-20p);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-dark);
  }

  @media (max-width: 768px) {
    .error-content h1 {
      font-size: 4rem;
    }

    .error-content p {
      font-size: 1.2rem;
    }
  }
</style>
