---
import Stalux from "@layouts/Stalux.astro";
import { getCollection } from "astro:content";
import Navs from "@components/stalux/layout/navs.astro";
import styles from "@styles/pages/tags.module.css";
import TagsCloud from "@components/stalux/tags/tagsCloud.astro";
const stalux = (await getCollection("config"))[0].data;
---

<Stalux
    stalux={{
        title: "标签云 | " + stalux.title,
        description: stalux.title + "的标签云",
        url: Astro.url.href,
        twitterSite: stalux.twitterSite,
        noindex: stalux.noindex,
        nofollow: stalux.nofollow,
        anyhead: stalux.anyhead,
    }}
>
    <div style="height: 3em;"></div>
    <Navs />
    <h1 class={styles.title}>标签云</h1>
    <div class={styles.description}>探索不同主题的文章标签</div>
    <TagsCloud />
</Stalux>
